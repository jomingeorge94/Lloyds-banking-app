<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="LloydsTitleSmall">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LloydsTitleMedium">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LloydsTitleLarge">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LloydsTitleXLarge">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="LloydsTitleXXLarge">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">54sp</item>
    </style>

    <style name="LloydsSubTitle">
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LloydsTextSmall">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LloydsTextMedium">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LloydsTextLarge">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="LloydsButtonActive" parent="LloydsTextSmall">
        <item name="android:background">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="LloydsButtonDisabled" parent="LloydsTextSmall">
        <item name="android:background">@color/medium_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="LloydsSpinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/inputs_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/inputs_list_selector_holo_light</item>
    </style>

    <style name="LloydsEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/inputs_edit_text_holo_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LloydsEditPasscode" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/inputs_edit_text_holo_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="LloydsEditSeekLabel" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/inputs_edit_text_holo_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name= "Title" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

   <style name="Transparency" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#5C000000</item>
        <item name="sv_showcaseColor">#99D699</item>
        <item name="sv_titleTextAppearance">@style/Title</item>

    </style>

</resources>
