            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/bs_home_progress"
            android:layout_toStartOf="@+id/bs_home_progress"
            android:progress="50" />

        <TextView
