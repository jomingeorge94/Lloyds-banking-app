<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_first_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white" >

    <TextView
        style="@style/LloydsTitleXLarge"
        android:id="@+id/settings_change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/settings_change_title"
        android:gravity="center_horizontal" />

    <View
        android:id="@+id/settings_change_underline"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/settings_change_title"
        android:background="@color/dark_green" />

    <TextView
        style="@style/LloydsTextSmall"
        android:id="@+id/settings_change_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_change_underline"
        android:text="@string/settings_change_description" />

    <TextView
        style="@style/LloydsTitleMedium"
        android:id="@+id/settings_change_passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_below="@id/settings_change_description"
        android:text="@string/settings_change_passcode"
        android:gravity="center" />

    <TableLayout
        android:id="@+id/settings_change_passcode_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/settings_change_passcode"
        android:stretchColumns="*" >

        <TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_passcode_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_passcode_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_passcode_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_passcode_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </TableRow>

    </TableLayout>

    <TextView
        style="@style/LloydsTitleMedium"
        android:id="@+id/settings_change_confirm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_below="@id/settings_change_passcode_table"
        android:text="@string/settings_change_confirm"
        android:gravity="center" />

    <TableLayout
        android:id="@+id/settings_change_confirm_tabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/settings_change_confirm_label"
        android:stretchColumns="*" >

        <TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_confirm_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_confirm_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_confirm_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <EditText
                style="@style/LloydsEditPasscode"
                android:id="@+id/settings_change_confirm_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionNone"
                android:password="true"
                android:maxLength="1"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
