<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ncl.ac.uk.cs.teamone.lloydsstudent.LoginActivity"
    android:background="#ffffffff"
    android:id="@+id/login_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:id="@+id/login_title"
        android:autoText="false"
        android:textColor="#ff252525"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_display_1_material"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/login_title"
        android:layout_alignStart="@+id/login_title"
        android:background="#369742"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/login_passcode_input"
        android:textColor="#ff252525"
        android:textSize="32sp"
        android:maxLength="4"
        android:color="#369742"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">
    </EditText>

</RelativeLayout>
