<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_about_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settings_about_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_green" >

        <ImageButton
            android:id="@+id/settings_about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_icon"
            android:background="@color/dark_green"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/settings_about_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_about_underline" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/white" >

        <TextView
            style="@style/LloydsTitleXLarge"
            android:id="@+id/settings_faq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_faq_title" />

        <View
            android:id="@+id/settings_faq_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/settings_faq_title"
            android:background="@color/dark_green" />

        <TextView
            style="@style/LloydsTextSmall"
            android:id="@+id/settings_faq_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_message"
            android:text="@string/settings_faq_message" />

        <TextView
            style="@style/LloydsTitleMedium"
            android:id="@+id/settings_faq_q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_message"
            android:text="@string/settings_faq_q1" />

        <TextView
            style="@style/LloydsTextSmall"
            android:id="@+id/settings_faq_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_q1"
            android:text="@string/settings_faq_a1" />

        <TextView
            style="@style/LloydsTitleMedium"
            android:id="@+id/settings_faq_q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_a1"
            android:text="@string/settings_faq_q2" />

        <TextView
            style="@style/LloydsTextSmall"
            android:id="@+id/settings_faq_a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_q2"
            android:text="@string/settings_faq_a2" />

        <TextView
            style="@style/LloydsTitleMedium"
            android:id="@+id/settings_faq_q3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_a2"
            android:text="@string/settings_faq_q3" />

        <TextView
            style="@style/LloydsTextSmall"
            android:id="@+id/settings_faq_a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_q3"
            android:text="@string/settings_faq_a3" />

        <TextView
            style="@style/LloydsTitleMedium"
            android:id="@+id/settings_faq_q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_a3"
            android:text="@string/settings_faq_q3" />

        <TextView
            style="@style/LloydsTextSmall"
            android:id="@+id/settings_faq_a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_faq_q4"
            android:text="@string/settings_faq_a4" />

        <TextView
            android:id="@+id/textView99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_faq_q5" />

        <TextView
            android:id="@+id/textView100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_faq_a5"
            android:textSize="16sp"
            android:textColor="#ff000000"
            android:layout_marginBottom="20dp" />



        </RelativeLayout>
    </ScrollView>

</LinearLayout>
