<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffc0c0c0">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:id="@+id/scrollView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff000000"
                android:text="@string/transfermoneytitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ffe0e0e0"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmdetails"
                android:id="@+id/textView28"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:textColor="#ff000000"
                android:text="@string/makeatransferfrom"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saving&apos;s Account"
                android:id="@+id/textView30"
                android:textColor="#ff000000"
                android:drawableLeft="@drawable/transferaccount_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:textColor="#ff000000"
                android:text="@string/makeatransferto"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Account"
                android:id="@+id/textView32"
                android:textColor="#ff000000"
                android:drawableLeft="@drawable/transferaccount_icon"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                android:textColor="#ff000000"
                android:text="@string/amount"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:textColor="#ff000000"
                android:drawableLeft="@drawable/pound_sign"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="100.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:textColor="#ff000000"
                android:text="@string/reference"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                android:textColor="#ff000000"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="University Transaction" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="70dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:id="@+id/makeaTransferOk"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/makeaTransferCancel"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>