<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    tools:context="ncl.ac.uk.cs.teamone.lloydsstudent.FirstLoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_title"
        android:id="@+id/login_title"
        android:autoText="false"
        android:textColor="#ff252525"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_display_1_material"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/login_title"
        android:layout_alignStart="@+id/login_title"
        android:background="#369742"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/first_passcode_info"
        android:id="@+id/textView7"
        android:textColor="#ff252525"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gen_finished"
        android:id="@+id/first_finished"
        android:background="#888888"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:clickable="false"
        android:enabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="#ff252525"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/first_passcode_label"
        android:id="@+id/first_passcode_label"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#ff252525"
        android:id="@+id/first_passcode"
        android:maxLength="4"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_below="@+id/first_passcode_label"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:password="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/first_passcode_confirm"
        android:id="@+id/textView11"
        android:textColor="#ff252525"
        android:layout_below="@+id/first_passcode"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#ff252525"
        android:id="@+id/first_confirm"
        android:maxLength="4"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:password="true" />

</RelativeLayout>
