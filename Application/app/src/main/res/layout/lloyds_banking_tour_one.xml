<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fffcfdff"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffc9c9c9"
        android:layout_above="@+id/imageButton6">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:clickable="false"
            android:src="@drawable/lloyds_banking_icon"
            android:background="#ffc9c9c9"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/LloydsTourTitle"
            android:id="@+id/textView34"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/LloydsTourmessage"
            android:id="@+id/textView36"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.47"
            android:src="@drawable/tour_pic_1"
            android:background="#ffc9c9c9"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_weight="0.07"
        android:src="@drawable/lloydstour_dots"
        android:background="#ffc9c9c9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp" />
</RelativeLayout>
