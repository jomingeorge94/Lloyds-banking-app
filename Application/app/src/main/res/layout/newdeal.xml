<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <ncl.ac.uk.cs.teamone.lloydsstudent.SwipeListView
       android:id="@+id/newDealList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:swipeActionLeft="dismiss"
        android:listSelector="#00000000"

       app:swipeCloseAllItemsWhenMoveList="true"
        app:swipeFrontView="@id/listofDeal"
        app:swipeBackView="@id/listofDeal"
        app:swipeActionRight="dismiss">

   </ncl.ac.uk.cs.teamone.lloydsstudent.SwipeListView>




</LinearLayout>
